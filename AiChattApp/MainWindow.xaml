<Window x:Class="AiChattApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiChattApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Lavender" FontFamily="Times new roman">
    <StackPanel>
    <Label FontSize="24" FontWeight="bold">Ai Chatt App</Label>
    <TextBox Name="txbPrompt" Height="100" Margin="10" Padding="10" Width="400"></TextBox>
    <Button Click="KlickSkicka" Margin="5" Padding="5" Width="400" FontWeight="bold">Skicka</Button>
    <TextBox Name="txbSvar" Height="300" Margin="10" Padding="10" IsReadOnly="true" VerticalScrollBarVisibility="auto" Width="400" TextWrapping="Wrap"></TextBox>
    </StackPanel>
</Window>
