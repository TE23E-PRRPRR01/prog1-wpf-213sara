<Window x:Class="IndexApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IndexApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
        <StackPanel>
            <Label Margin="10" FontSize="30">Index App</Label>
            <StackPanel Orientation="Horizontal">
                <Label Margin="10" Width="70">Text: </Label>
                <TextBox Margin="10" Width="150" Name="tbxText"></TextBox> 
            </StackPanel>  
            
            <StackPanel Orientation="Horizontal">
                    <Label Margin="10" Width="70">Index: </Label>
                    <TextBox Margin="10" Width="150" Name="tbxIndex"></TextBox>
            </StackPanel>
                
            <Button Click="KlickVisa" Margin="10" Padding="5" Width="50">Visa!</Button>
                
            <StackPanel Orientation="Horizontal">
                    <Label Margin="10" Width="70">Resultat: </Label>
                <TextBox Margin="10" Width="150" Name="tbxResultat"></TextBox>
            </StackPanel>
    
        </StackPanel>
</Window>
