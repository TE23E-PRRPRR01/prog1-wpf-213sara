<Window x:Class="AritmetikRäknare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AritmetikRäknare"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="500" Background="lightgray">
    <StackPanel>
    <Label FontSize="35" FontWeight="bold">Aritmetiken</Label>

    <Label FontSize="16" FontWeight="bold">Tal 1:</Label>
    <TextBox Name="tbxTal1 " Margin="10" Padding="10"></TextBox>

    <Label FontSize="16" FontWeight="bold">Operator(+, -, *, /)</Label>
    <TextBox Name="OPtbx" Margin="10" Padding="10"></TextBox>

    <Label FontSize="16" FontWeight="bold">Tal 2:</Label>
    <TextBox Name="tbxTal2" Margin="10" Padding="10"></TextBox>

    <Button Background="lightblue" Margin="10" Padding="10" Click="KlickBeräkna">Beräkna</Button>
    
    <Label Name="lblResultat" FontSize="16" FontWeight="bold">Beräkna: </Label>

    </StackPanel>
</Window>